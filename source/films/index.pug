    if self.data.films
        main.grid_films
            each val in self.data.films
                a.card_film(href= `/${val.path}`)
                    .container_frame_16_9
                        if self.data.pictures.filmslugs[val.path]
                            if self.data.pictures.filmslugs[val.path].poster
                                img.container_contents_16_9(src=`/assets/img/img_films/${val.path}/${self.data.pictures.filmslugs[val.path].poster}` alt = val.filmTitle)
                            else
                                img.container_contents_16_9(src='/assets/img/global/placeholder_hd_1.jpg' alt = val.filmTitle)
                        else
                            img.container_contents_16_9(src='/assets/img/global/placeholder_hd_1.jpg' alt = val.filmTitle)
                    .card_film_title
                        h3.film_title_locale= val.filmTitle
                    .card_film_info
                        if val.filmTitle
                            .str_info_grid_3
                                .str_info_label= self.label.film.filmTitleSec
                                .str_info_value= val.filmTitleSec
                        if val.filmDirector
                            .str_info_grid_3
                                .str_info_label= self.label.film.filmDirector
                                .str_info_value= val.filmDirector
