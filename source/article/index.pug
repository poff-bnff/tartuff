extends ../_templates/layout.pug
include ../_templates/mixins.pug



block content

    - var my_path = self.path.split("/")[self.path.split("/").length-1]

    - var articlePics = self.data.article_pictures.articles
    - var articlePic = articlePics[my_path]

    main.grid_article
        section.article_hero_head
            img.article_hero_image(src='/assets/img/img_articles/' + my_path + '/' + articlePic.heroImage)
        .article_hero_headline_box
            .article_title_detailed= self.articleTitle_et

    section.grid_article
        section.article_meta
            .str_info_meta_gi
                .str_info_meta_item
                    .str_info_meta_value= self.articleType
                .str_info_meta_item
                    .str_info_meta_value= self.articleAuthor
                .str_info_meta_item
                    .str_info_meta_value= self.kuup√§ev + '  ' + self.kell
                .str_info_meta_item
                    .str_info_meta_keywords= self.tagKeyword


        section.article_contents
            p= self.articleLead_et
            p= self.articleContents_et

        section.article_extra






