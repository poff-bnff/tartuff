/* KOMMENTAAR shift-option-A */

*
    font-size 16px
    line-height 1.618rem
    box-sizing border-box
    &::before
    &::after
        box-sizing border-box

html
    scroll-behavior smooth
    height 100%

body
    font-size 16px
    line-height 1.618rem
    color white_96
    background bg_dark_1
    font-family font_h
    margin 0
    padding-left 0
    padding-right 0
    padding-bottom 0


.bg_dark_1
    background-color bg_dark_1

.bg_dark_2
    background-color bg_dark_2

.bg_dark_3
    background-color bg_dark_3

.bg_dark_4
    background-color bg_dark_4

/* Header & Nav styles */

header
    background-color clr_header_bg
    width 100%
    text-align center
    position fixed
    z-index 900
    display flex
    justify-content flex-start

.main_menu
    position absolute
    text-align left
    left 0
    background-color clr_header_bg
    width 100%
    padding-top 1rem
    padding-bottom 1rem
    display none

footer
    grid-area footer
    display grid
    grid-template-columns 1fr 1fr 1fr
    grid-template-rows auto
    grid-gap 2rem
    justify-items center
    align-items center
    border-top 1px solid rgba(255,255,255,.1)
    padding 2rem

nav
    ul
        padding 0
        margin 0
        list-style none
    li
        margin-top .5rem
        margin-bottom .5rem
        margin-left 1rem
    a
        color white_96
        font-size 1rem
        text-decoration none
        text-transform uppercase
        &:hover
            color clr_primary
            text-decoration none

.main_menu_toggle
    display none
    &:checked
        & ~ main_menu
            display block

.main_menu_toggle_label
    position absolute
    top 0
    right 0
    margin-right 1rem
    height 100%
    display flex
    align-items center
    span
        &::before
            bottom 7px
        &::after
            top 7px

.main_menu_toggle_label span,
.main_menu_toggle_label span::before,
.main_menu_toggle_label span::after
    display block
    background white_96
    height 1px
    width 1.6rem
    border-radius 2px
    position relative

.main_menu_toggle_label span::before,
.main_menu_toggle_label span::after
    content ""
    position absolute

.logo
    margin 1rem
    padding 0
    width 170px

.logo_img:hover,
.logo_img:focus
    opacity 0.7
    transform scale(2.4, 2.4)
    transform-origin left top

.dir_img
    width 100%
    object-fit cover

.img_dir
    width 100%
    object-fit cover

/* GRID: MAIN & SECTIONS */
/* Grid-areas .grid_film - mobile 1 column */

.grid_film
  display grid
  grid-template-columns 1fr
  grid-template-rows auto
  grid-template-areas   "f_img_slider_box"\
                        "f_title_box"\
                        "f_synopsis_box"\
                        "f_runtime_box"\
                        "f_screenings_box"\
                        "f_cred_box"\
                        "f_dir_bio_box"\
                        "f_trailer_box"\
                        "f_extra_box"\
                        "f_imgs_box"

.grid_filmid
