/* Header & Nav styles */

header {
  background-color: var(--clr_header_bg);
  width: 100%;
  text-align: center;
  /* position */
  position: fixed;
  z-index: 900;
  display: flex;
  justify-content: flex-start;
}

.main_menu {
  position: absolute;
  text-align: left;
  /* top: 100%; */
  left: 0;
  background-color: var(--clr_header_bg);
  width: 100%;
  padding-top: 1rem;
  padding-bottom: 1rem;
  /* TRANSITION  display: none; asemel */
  display: none;
  /* transform: scale(1, 0); */
}

footer {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: auto;
  grid-gap: 2rem;
  justify-items: center;
  align-items: center;
  border-top: 1px solid rgba(255,255,255,.1);
  padding: 2rem;
}

/* .social {
  background-color: var(--bg_dark_4);
} */

nav ul {
  padding: 0;
  margin: 0;
  list-style: none;
}

nav li {
  margin-top: .5rem;
  margin-bottom: .5rem;
  margin-left: 1rem;
}

nav a {
  color: var(--white_96);
  font-size: 1rem;
  text-decoration: none;
  text-transform: uppercase;
}

nav a:hover {
  color: var(--clr_primary);
  text-decoration: none;
}

.main_menu_toggle {
  display: none;
}

.main_menu_toggle_label {
  position: absolute;
  top: 0;
  right: 0;
  margin-right: 1rem;
  height: 100%;
  display: flex;
  align-items: center;
}

.main_menu_toggle_label span,
.main_menu_toggle_label span::before,
.main_menu_toggle_label span::after {
  display: block;
  background: var(--white_96);
  height: 1px;
  width: 1.6rem;
  border-radius: 2px;
  position: relative;
}

.main_menu_toggle_label span::before,
.main_menu_toggle_label span::after {
  content: "";
  position: absolute;
}

.main_menu_toggle_label span::before {
  bottom: 7px;
}

.main_menu_toggle_label span::after {
  top: 7px;
}

.logo {
  margin: 1rem;
  padding: 0;
  width: 170px;
  /* justify-self: middle; */
  /* align: center; */
}

.logo_img:hover,
.logo_img:focus {
  opacity: 0.7;
  transform: scale(2.4, 2.4);
  /* transform: translate(30vw, 30vh); */
  transform-origin: left top;
}

.dir_img {
  width: 100%;
  object-fit: cover;
}

.img_dir {
  width: 100%;
  object-fit: cover;
}

.main_menu_toggle:checked~main_menu {
  /* TRANSITION asemele */
  display: block;
  /* transform: scale(1, 1); */
}


