/* MEDIA query: for large screens */
@media screen and (min-width: 800px)
    .grid_film
        display grid
        grid-template-columns 1fr 1fr 1fr
        grid-template-rows auto
        grid-template-areas "f_img_slider_box  f_img_slider_box  f_title_box"\
                            "f_synopsis_box    f_synopsis_box    f_cred_box"\
                            "f_synopsis_box    f_synopsis_box    f_runtime_box"\
                            "f_screenings_box  f_screenings_box  f_screenings_box"\
                            "f_dir_bio_box     f_dir_bio_box     f_extra_box"\
                            "f_trailer_box     f_trailer_box     f_trailer_box"\
                            "f_imgs_box        f_imgs_box        f_imgs_box"

    .grid_filmid
        display: grid
        grid-template-columns: 1fr 1fr 1fr
        grid-template-rows: auto
        grid-gap: 1rem
        padding: 1rem
        padding-top: 100px

    .main_menu_toggle_label
        display none

    header
        display grid
        grid-template-columns auto 1fr


    nav
        ul
            display flex
            justify-content flex-end
            align-items flex-end
            li
                height 100%
                margin 0
                padding-left 1.2rem
                padding-right 1.2rem
                padding-top 1rem
                padding-bottom 1rem
                border 1px solid rgba(255, 255, 255, 0)
                &:hover
                background-color bg_dark_2
                border-top 1px solid clr_primary
                a
                &:hover
                    color white_96

    .main_menu
        grid-column 2 / 3
        display flex
        justify-content flex-end
        align-items flex-end
        position static
        border 1px white
        margin 0
        padding 0
        padding-right 1.2rem

        ul
            li.dropdown
                ul
                    background-color bg_dark_2
                    position absolute
                    left 0
                    padding-left 0
                    width max-content
                    display none
                    li
                        a
                            text-transform none
                &:hover
                    ul
                        display block

    .logo
        grid-column 1 / 2
        justify-content flex-start
        align-items flex-end
        width 210px
        padding-left 1.2rem
        padding-bottom .4rem
        padding-top .4rem

    .film
        display grid
        grid-template-columns repeat(3, 1fr)
        grid-template-rows auto
        grid-gap 0px
        background-color bg_dark_1

    .f_synopsis_box
    .f_dir_bio_box
        background-color bg_dark_2
        padding-left calc(1rem + 1vw)
        padding-right calc(1rem + 1vw)
        display grid
        grid-template-columns minmax(214px, 1fr) 2fr
        grid-gap 4rem

    .f_title_box
        margin-top 100px

    .f_title_box
    .f_synopsis_box
    .f_dir_bio_box
    .f_cred_box
    .f_runtime_box
    .f_screenings_box
    .f_extra_box
        padding-top calc(2rem + 1vw)
        padding-bottom calc(2rem + 1vw)

    .str_info_meta_item
        display block

    .str_info_meta_festival
    .str_info_meta_program
    .str_info_meta_genre
    .str_info_meta_keywords
        text-align right
        padding-bottom 1rem

    .card_screening
        min-width 300px
        max-width 400px
        margin-left 1vw
        margin-right 1vw

